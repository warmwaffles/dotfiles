root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{c,h}]
indent_size = 4

[*.go]
indent_style = tab

[*.tf]
indent_size = 2

[Makefile]
indent_style = tab

[Makefile.win]
indent_style = tab

[justfile]
indent_size = 4

[*.{ex,exs}]
indent_size = 2
